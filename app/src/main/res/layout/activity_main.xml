    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/edit_text"
            app:layout_constraintTop_toTopOf="parent"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="ニックネーム"
            app:value="テストさん"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/below_divider"
    />

    <View
            android:id="@+id/below_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text"
            app:layout_constraintBottom_toTopOf="@id/edit_text2"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="座右の銘"
            app:value="我輩は猫である"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/below_divider"
            app:layout_constraintBottom_toTopOf="@id/below_divider2"
    />

    <View
            android:id="@+id/below_divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text2"
            app:layout_constraintBottom_toTopOf="@id/edit_text3"
    />

    <jp.co.youmitsu.myapplication.CustomMotionEditTextLayout
            android:id="@+id/edit_text3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:title="今日の一言"
            app:value="元気があるのが一番!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/below_divider2"
            app:layout_constraintBottom_toTopOf="@id/below_divider3"
    />

    <View
            android:id="@+id/below_divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text3"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/under_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登録"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>